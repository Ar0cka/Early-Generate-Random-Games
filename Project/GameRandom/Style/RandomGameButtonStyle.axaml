<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Button Classes="RandomButton">
                <Image Source="../Assets/RightClick.jpg" Classes="GameImages"></Image>
            </Button>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Button.RandomButton">
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="Height" Value="200"></Setter>
    </Style>
    
    <Style Selector="Image.GameImages">
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="Height" Value="250"></Setter>
    </Style>
</Styles>
