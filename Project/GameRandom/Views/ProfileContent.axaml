<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GameRandom.Views.ProfileContent">
    
    <StackPanel Spacing="5">
        <StackPanel.Background>
            <ImageBrush Source="../Assets/RandomGame.png" Stretch="UniformToFill"></ImageBrush>
        </StackPanel.Background>
        
        <Button Content="Close" Classes="CloseProfile"
                HorizontalAlignment="Right" Margin="0, 0, 10, 0"
                Click="ExitFromProfile"></Button>
        
        <Grid RowDefinitions="Auto, Auto" 
              HorizontalAlignment="Right" Margin="0, 50, 70, 0">
            <Image Grid.Row="0" x:Name="AvatarImage"
                   Source="../Assets/avalonia-logo.ico"
                   Width="150" Height="150"></Image>
            <Label Grid.Row="1" x:Name="AccName"
                   Content="Ar0cka" Margin="40, 0, 0, 0"
                   FontSize="24" Foreground="Black"></Label>
        </Grid>
        
    </StackPanel>
</UserControl>
